<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
  </head>
  <body style="background-color: <%= locals.bgColor ? locals.bgColor : null %>">
    
     <div class="conteiner-xl">
      <h1>bienvenido</h1>
    </div>
    <div>
      
    </div>
    
    
    <form class="container-xl" action="" method="post">
      <div class="mb-3">
        <label for="name" class="form-label">Ingrese su nombre</label>
        <input type="text" class="form-control" id="name" placeholder="name@example.com">
        <span class="text-danger"><%= locals.errors && errors.name ?errors.name.msg : null %> </span>
      </div>
      <select class="form-select" aria-label="Default select example" name="color">
        <option selected>Elige color</option>
        <option value="Red">Red</option>
        <option value="Blue">Blue</option>
        <option value="Yellow">Yellow</option>
      </select>
      <span class="text-danger"><%= locals.errors && errors.color ?errors.color.msg : null %> </span>
      <div class="mb-3">
        <label for="email" class="form-label">Ingrese su email</label>
        <input type="email" name="email" class="form-control" id="email" placeholder="name@example.com">
        <span class="text-danger"><%= locals.errors && errors.email ?errors.email.msg : null %> </span>
      </div>
      <div class="mb-3">
        <label for="edad" class="form-label">Ingrese su edad</label>
        <input type="text" name="edad" class="form-control" id="edad" placeholder="name@example.com">
        <span class="text-danger"><%= locals.errors && errors.edad ?errors.edad.msg : null %> </span>
      </div>
      
      <div class="form-check">
        <input class="form-check-input" type="checkbox" name="recordar" id="recordar">
        <label class="form-check-label" for="recordar">
          Recordarme
        </label>
        <a href="./index.ejs"><input class="btn btn-primary" type="submit" value="Enviar"></a>
        <button type="reset" class="btn btn-secondary">Olvidar color</button>
      </div>
    </form>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
  </body>
</html>